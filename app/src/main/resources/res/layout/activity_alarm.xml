    <ImageView android:id="@+id/imgAppIcon" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginTop="60dp" android:layout_below="@+id/txtAlarmTitleAppName" android:layout_centerHorizontal="true"/>
